{
  "name": "@inventage/portal-components",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "author": "Inventage AG <info@inventage.com>",
  "homepage": "https://inventage.github.io/portal-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/inventage/portal-components.git"
  },
  "version": "0.3.4",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "npm run clean && tsc && run-s build:* && npm run build:analyze:custom-elements && run-p copy:*",
    "build:analyze:custom-elements": "wca analyze 'components/**/*.ts' --outFile custom-elements.json",
    "build:analyze:readme": "wca analyze 'components/**/*.ts' --silent",
    "build:storybook": "npm run storybook:build",
    "clean": "rimraf storybook-static dist",
    "copy:data": "cp -Rpf data storybook-static/",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier '**/*.{js,ts,md}' --write --ignore-path .gitignore",
    "lint": "run-p lint:*",
    "lint:analyze": "lit-analyzer 'components/**/*.ts' --strict --rules.no-noncallable-event-binding warn",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md' --ignore '**/*.stories.md'",
    "lint:prettier": "prettier '**/*.{js,ts,md}' --check --ignore-path .gitignore",
    "lint:tsc": "tsc",
    "prepublishOnly": "tsc",
    "start": "concurrently -k -n wca,tsc,storybook 'npm run watch:analyze:custom-elements' 'npm run tsc:watch' 'npm run storybook'",
    "start:build": "npm run build && npm run storybook:build:start",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "storybook:build:start": "es-dev-server --root-dir storybook-static --open",
    "test": "tsc && npm run test:browser",
    "test:browser": "wtr 'components/**/*/test/**/*.test.ts' --coverage",
    "test:browser:all": "wtr 'components/**/*/test/**/*.test.ts' --playwright --browsers chromium firefox webkit --coverage",
    "test:browser:watch": "wtr 'components/**/*/test/**/*.test.ts' --watch",
    "test:watch": "npm run test:browser:watch",
    "tsc:watch": "tsc -p tsconfig.dev.json --watch",
    "watch:analyze:custom-elements": "onchange -i 'components/**/*.ts' -- npm run build:analyze:custom-elements"
  },
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@lion/helpers": "^0.5.11",
    "@open-wc/demoing-storybook": "^2.4.5",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.29",
    "@storybook/addon-a11y": "^6.0.27",
    "@storybook/addon-actions": "^6.0.27",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/test-runner": "^0.9.6",
    "@web/test-runner-commands": "^0.2.1",
    "@web/test-runner-playwright": "^0.6.4",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.8",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-lit": "^1.2.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "lit-analyzer": "^1.2.1",
    "markdownlint-cli": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.0",
    "typescript": "^4.0.5",
    "web-component-analyzer": "^1.1.6",
    "webpack-merge": "^5.2.0"
  },
  "keywords": [
    "lit-element",
    "lit-html",
    "portal",
    "web-components"
  ],
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'"
    ]
  },
  "np": {
    "yarn": false
  }
}
