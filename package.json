{
  "name": "@inventage/portal-components",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "author": "Inventage AG <info@inventage.com>",
  "homepage": "https://inventage.github.io/portal-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/inventage/portal-components.git"
  },
  "version": "0.2.0",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "components",
    "custom-elements.json",
    "docs"
  ],
  "scripts": {
    "build": "npm run clean && run-s build:* && npm run copy:data",
    "build:analyze:custom-elements": "wca analyze 'components/**/*.js' --outFile custom-elements.json",
    "build:analyze:readme": "wca analyze 'components/**/*.js' --silent",
    "build:storybook": "npm run storybook:build",
    "build:types": "npm run clean:types && tsc -p tsconfig.json",
    "clean": "run-p clean:*",
    "clean:storybook": "rimraf storybook-static",
    "clean:types": "rimraf '*.d.ts' 'components/**/*.d.ts'",
    "copy:data": "cp -Rpf data storybook-static/",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier '**/*.{js,md}' --write --ignore-path .gitignore",
    "lint": "npm run clean:types && run-p lint:* && npm run build:types",
    "lint:analyze": "lit-analyzer 'components/**/*.js' --strict",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md' --ignore '**/*.stories.md'",
    "lint:prettier": "prettier '**/*.{js,md}' --check --ignore-path .gitignore",
    "prepublishOnly": "npm run lint && npm run build:types",
    "start": "concurrently -n wca,storybook 'npm run watch:analyze:custom-elements' 'npm run storybook'",
    "start:build": "npm run build && npm run storybook:build:start",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "storybook:build:start": "es-dev-server --root-dir storybook-static --open",
    "test": "npm run test:browser",
    "test:browser": "wtr 'components/**/*/test/**/*.test.js' --coverage",
    "test:browser:all": "wtr 'components/**/*/test/**/*.test.js' --playwright --browsers chromium firefox webkit --coverage",
    "test:browser:watch": "wtr 'components/**/*/test/**/*.test.js' --watch",
    "test:watch": "npm run test:browser:watch",
    "watch:analyze:custom-elements": "onchange -i 'components/**/*.js' -- npm run build:analyze:custom-elements"
  },
  "types": "./types/index.d.ts",
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@lion/helpers": "^0.5.8",
    "@open-wc/demoing-storybook": "^2.4.1",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.26",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.21",
    "@web/test-runner": "^0.7.27",
    "@web/test-runner-playwright": "^0.5.6",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-lit": "^1.2.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "lit-analyzer": "^1.2.1",
    "markdownlint-cli": "^0.23.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.1.2",
    "sinon": "^9.0.3",
    "typescript": "^4.0.3",
    "web-component-analyzer": "^1.1.6",
    "webpack-merge": "^5.1.4"
  },
  "keywords": [
    "lit-element",
    "lit-html",
    "portal",
    "web-components"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "plugin:lit/recommended",
      "eslint-config-prettier"
    ],
    "plugins": [
      "lit"
    ],
    "ignorePatterns": [
      "*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md' --ignore '**/*.stories.md'"
    ]
  },
  "np": {
    "yarn": false
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 240,
    "trailingComma": "all"
  }
}
