{
  "name": "@inventage/portal-components",
  "version": "0.0.0",
  "description": "A collection of webcomponents for enterprise portals.",
  "homepage": "https://inventage.github.io/portal-components",
  "author": "Inventage AG <info@inventage.com>",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "lit-element",
    "lit-html",
    "portal"
  ],
  "files": [
    "index.js",
    "custom-elements.json",
    "LICENSE",
    "README.md",
    "components",
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inventage/portal-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "concurrently -n wca,storybook 'npm run watch:analyze:custom-elements' 'npm run storybook'",
    "start:build": "npm run build && npm run storybook:build:start",
    "build": "run-s build:*",
    "build:analyze:custom-elements": "wca analyze 'components/**/*.js' --outFile custom-elements.json",
    "build:analyze:readme": "wca analyze 'components/**/*.js' --silent",
    "build:storybook": "npm run storybook:build",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier '**/*.{js,md}' --write --ignore-path .gitignore",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier '**/*.{js,md}' --check --ignore-path .gitignore",
    "lint:markdownlint": "markdownlint '*.md' --ignore '**/CHANGELOG.md' --ignore '**/*.stories.md'",
    "lint:analyze": "lit-analyzer 'components/**/*.js' --strict",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "npm run test:browser",
    "test:browser": "karma start --coverage",
    "test:browser:bs": "karma start karma.conf.bs.js --coverage",
    "test:browser:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "storybook:build:start": "es-dev-server --root-dir storybook-static --open",
    "watch:analyze:custom-elements": "onchange -i 'components/**/*.js' -- npm run build:analyze:custom-elements"
  },
  "dependencies": {
    "lit-html": "^1.2.1",
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@lion/helpers": "^0.4.0",
    "@open-wc/demoing-storybook": "^2.3.3",
    "@open-wc/eslint-config": "^2.0.6",
    "@open-wc/testing": "^2.5.17",
    "@open-wc/testing-karma": "^3.3.32",
    "@open-wc/testing-karma-bs": "^1.3.76",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-actions": "^5.3.19",
    "concurrently": "^5.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.53.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "lit-analyzer": "^1.1.11",
    "markdownlint-cli": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "web-component-analyzer": "^1.0.3",
    "webpack-merge": "^4.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md' --ignore '**/*.stories.md'"
    ]
  },
  "np": {
    "yarn": false
  }
}
