{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha", "sinon"],
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "index.js",
    "components/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
    "components/*/stories/**/*.js",
    "components/*/test/**/*.js"
  ]
}
